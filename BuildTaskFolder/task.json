{
    "id": "33191b0c-3c57-4532-a11a-dcc5ab7fb467",
    "name": "spira-build-task",
    "friendlyName": "Export data to SpiraPlan",
    "description": "Exports data on test runs to SpiraPlan",
    "author": "Inflectra",
    "helpMarkDown": "TODO: Add help markdown!",
    "category": "Build",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "1"
    },
    "minimumAgentVersion": "1.95.0",
    "instanceNameFomat": "Spira Endpoint Task $(project)",
    "inputs": [
        {
            "name": "SpiraService",
            "type": "connectedService:Spira",
            "label": "SpiraPlan project",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Select the SpiraPlan project to send test runs to."
        },
        {
            "name": "project",
            "type": "pickList",
            "label": "SpiraPlan Project",
            "required": true,
            "helpMarkDown": "Select the name of the SpiraPlan product to use",
            "properties": {
                "EditableOptions": "True"
            }
        }
    ],
    "dataSourceBindings": [
        {
            "target": "project",
            "endpointId": "$(SpiraService)",
            "dataSourceName": "{{endpoint.url}}/Services/v5_0/RestService.svc/projects?username={{endpoint.username}}&api-key={{endpoint.password}}"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}