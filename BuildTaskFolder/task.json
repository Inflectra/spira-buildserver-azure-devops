{
    "id": "33191b0c-3c57-4532-a11a-dcc5ab7fb467",
    "name": "spira-build-task",
    "friendlyName": "Export data to SpiraPlan",
    "description": "Exports data on test runs to SpiraPlan",
    "author": "Inflectra",
    "helpMarkDown": "TODO: Add help markdown!",
    "category": "Build",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [],
    "version": {
        "Major": "0",
        "Minor": "1",
        "Patch": "1"
    },
    "minimumAgentVersion": "1.95.0",
    "instanceNameFomat": "Spira Endpoint Task $(project)",
    "inputs": [
        {
            "name": "connectedService",
            "type": "connectedService:SpiraPlanConfig",
            "label": "Spira Credentials",
            "required": true,
            "helpMarkDown": "Service endpoint connection for Spira credentials"
        },
        {
            "name": "project",
            "type": "string",
            "label": "Spira Project ID",
            "required": true,
            "helpMarkDown": "Enter the ID of the project in Spira you would like to send your test results to."
        },
        {
            "name": "testResultsFormat",
            "type": "pickList",
            "label": "Test Results Format",
            "options": {
                "JUnit": "JUnit",
                "NUnit 3": "NUnit 3",
                "XUnit": "XUnit"
            },
            "defaultValue": "JUnit",
            "required": false,
            "helpMarkDown": "Format of the test results"
        },
        {
            "name": "testResultsGlob",
            "type": "string",
            "label": "Test Results Pattern",
            "required": false,
            "helpMarkDown": "Glob pattern for the test files (ex. junitresults-*.xml)"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}