{
    "manifestVersion": 1,
    "id": "spira-extension",
    "publisher": "Inflectra",
    "version": "0.1.2.10",
    "name": "Spira extension for Azure DevOps",
    "public": false,
    "categories": [
        "Azure Repos"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "files": [
        {
            "path": "node_modules",
            "addressable": true,
            "packagePath": "lib"
        },
        {
            "path": "BuildTaskFolder"
        }
    ],
    "contributions": [
        {
            "id": "service-endpoint",
            "description": "Service endpoint for SpiraPlan integration",
            "type": "ms.vss-endpoint.service-endpoint-type",
            "targets": [
                "ms.vss-endpoint.endpoint-types"
            ],
            "properties": {
                "name": "SpiraPlan",
                "displayName": "SpiraPlan Configuration",
                "url": {
                    "displayName": "SpiraPlan URL",
                    "helpText": "Base URL for your SpiraPlan instance"
                },
                "dataSources": [
                    {
                        "name": "SpiraPlan Projects",
                        "endpointUrl": "{{endpoint.url}}/Services/v5_0/RestService.svc/projects?username={{endpoint.username}}&api-key={{endpoint.password}}",
                        "resultSelector": "jsonpath:$[*].spira"
                    }
                ],
                "authenticationSchemes": [
                    {
                        "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                        "inputDescriptors": [
                            {
                                "id": "username",
                                "name": "Username",
                                "description": "SpiraPlan Username",
                                "inputMode": "textbox",
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            },
                            {
                                "id": "password",
                                "name": "RSS Token",
                                "Description": "SpiraPlan API Key",
                                "inputMode": "textbox",
                                "validation": {
                                    "isRequired": true,
                                    "dataType": "string"
                                }
                            }
                        ]
                    }
                ],
                "helpMarkDown": "<a href=\"url-to-documentation\" target=\"_blank\"><b>Learn More</b></a>"
            }
        },
        {
            "id": "build-task",
            "description": "Task for retrieving data from SpiraPlan",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "BuildTaskFolder"
            }
        }
    ]
}